{
  "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "module": "Node16",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": ["node_modules"],
    "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}