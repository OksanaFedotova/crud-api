{
  "compilerOptions": {
      "module": "es6",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"],
    "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}